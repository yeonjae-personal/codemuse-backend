# CodeMuse Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://codemuse:codemuse_password@localhost:5432/codemuse
REDIS_URL=redis://localhost:6379

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# Vector Database
VECTOR_DB_URL=http://localhost:8001
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Service Configuration
DOCUMENT_GENERATOR_PORT=8002
RAG_ENGINE_PORT=8003
LLM_CHAT_PORT=8004
WEB_INTERFACE_PORT=8005
WORKFLOW_ORCHESTRATOR_PORT=8006

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=true
RELOAD=true

# Production (set to false in production)
CORS_ORIGINS=*