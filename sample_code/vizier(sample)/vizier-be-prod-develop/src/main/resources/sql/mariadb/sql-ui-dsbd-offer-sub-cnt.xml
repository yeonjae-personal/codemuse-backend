<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ui-dsbd-offer-sub-cnt">	
	
	<select id="findProperties" resultType="com.lgcns.svcp.prod.entity.DsbdOfferSubCntEntity">
		SELECT offer_code, offer_name, offer_type_name, batch_run_dtm
			   ,sub_cnt, sale_valid_start_dtm, sale_valid_end_dtm
			   ,rgst_user, rgst_dtm, upd_user, upd_dtm
        FROM tb_dsbd_offer_sub_cnt_m where 1 = 1
        <if test="offerTypeName != null">
			and offer_type_name = #{offerTypeName}
		</if>
		<if test="offerName != null">
			and lower(offer_name) LIKE <![CDATA[ CONCAT('%', #{offerName},'%')]]>
		</if>
		<if test="offerCode != null">
			and lower(offer_code) LIKE <![CDATA[ CONCAT('%', #{offerCode},'%')]]>
		</if>
		<if test="sorting != null">
			order by
			<foreach collection="sorting" item="item">
                     ${item}
            </foreach>
		</if>
	</select>
</mapper>